html
	head
		title MTGP		
		link(rel="stylesheet", type="text/css" href="bootstrap.css")
		link(rel="stylesheet", type="text/css" href="style.css")
		script(src='bootstrap.js')
	body
		div.container
			h1 cards cards cards cards cards
			div.row
				div.col-md-4
					form(method='get', action='/land')
						table.table
							thead
								tr
									th COLOR
									th AND
									th OR
									th NOT
							tbody
								for col in colors
									tr
										td=col.toString()
										td
											input(type='checkbox' name='and|'+col)
										td
											input(type='checkbox' name='or|'+col)
										td
											input(type='checkbox' name='not|'+col)
						input(type='submit' value='YEAH').btn
				div.col-md-4
					p general doodoo
			for card in cards
				h3= card.name
					span.price= card.best_price_str
				h4= card.text