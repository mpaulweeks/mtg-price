html
	head
		title MTGP		
		link(rel="stylesheet", type="text/css" href="bootstrap.css")
		link(rel="stylesheet", type="text/css" href="style.css")
		script(src='bootstrap.js')
	body
		div.container
			h1 lands lands lands lands lands lands lands lands lands lands 
			div.row.text-center
				div.col-md-5
					h3 Search by commander:
					form(method='get', action='/edh')
						div.form-group
							input(type='test' value='k')
						div.form-group
							input(type='submit' value='PLS').btn
				div.col-md-2
					h2 OR
				div.col-md-5
					form(method='get', action='/land', role='form')
						div.form-group
							table.table.text-center
								thead
									tr
										th.text-center COLOR
										th.text-center AND (MAKES)
										th.text-center OR (MAKES)
										th.text-center NOT (IDENTITY)
								tbody
									for col in colors
										tr
											td=col.toString()
											td
												input(type='checkbox' name='and' value=col)
											td
												input(type='checkbox' name='or' value=col)
											td
												input(type='checkbox' name='not' value=col)
						div.form-group.text-left
							label(for='format').control-label Legal in: 
							select(name='format')#format.form-control
								option(value='null') don't care, show me everything!
								for form in formats
									option(value=form)=form
						div.form-group
							input(type='submit' value='YEAH').btn
			for card in cards
				h3= card.name
					span.price= card.best_price_str
				h4= card.text